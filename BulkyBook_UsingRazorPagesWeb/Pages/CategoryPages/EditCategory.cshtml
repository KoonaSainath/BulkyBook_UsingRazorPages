@page
@model BulkyBook_UsingRazorPagesWeb.Pages.CategoryPages.EditCategoryModel

<div class="container mt-4 p-3">
    <div class="mb-2 row">
        <h2>Edit category</h2>
    </div>
    <form method="post">
        <input asp-for="@Model.category.Id" hidden/>
        <div class="mb-2">
            <label asp-for="@Model.category.Name"></label>
            <input asp-for="@Model.category.Name" class="form-control"/>
            <span asp-validation-for="@Model.category.Name" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="@Model.category.DisplayOrder"></label>
            <input asp-for="@Model.category.DisplayOrder" class="form-control"/>
            <span asp-validation-for="@Model.category.DisplayOrder" class="text-danger"></span>
        </div>
        <button class="btn btn-dark mx-2" type="submit">Edit</button>
        <a class="btn btn-info" asp-page="/CategoryPages/Index">Back to list</a>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}