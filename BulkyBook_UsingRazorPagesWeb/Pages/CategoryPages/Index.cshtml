@page
@model BulkyBook_UsingRazorPagesWeb.Pages.CategoryPages.IndexModel

<div class="container mt-4 p-3">
    <div class="row mb-2">
        <div class="col-6">
            <h2>Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-page="/CategoryPages/CreateCategory"><i class="bi bi-plus-circle-fill"></i> &nbsp; Create new category</a>
        </div>
    </div>
    <table class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Category name
                </th>
                <th>
                    Display order
                </th>
                <th>
                    Created date and time
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category category in Model.categories)
            {
                <tr>
                    <td>
                        @category.Name
                    </td>
                    <td>
                        @category.DisplayOrder
                    </td>
                    <td>
                        @category.CreatedDateTime
                    </td>
                    <td>
                        <a class="btn btn-dark mx-2" asp-page="/CategoryPages/EditCategory" asp-route-id="@category.Id">Edit</a>
                        <a class="btn btn-danger" asp-page="/CategoryPages/DeleteCategory" asp-route-id="@category.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
