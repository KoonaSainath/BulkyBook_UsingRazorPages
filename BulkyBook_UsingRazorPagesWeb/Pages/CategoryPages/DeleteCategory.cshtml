@page
@model BulkyBook_UsingRazorPagesWeb.Pages.CategoryPages.DeleteCategoryModel

<div class="container mt-4 p-3">
    <div class="mb-2">
        <h2>Delete category</h2>
    </div>
    <form method="post">
        <input asp-for="@Model.category.Id" hidden/>
        <div class="mb-2">
            <label asp-for="@Model.category.Name"></label>
            <input asp-for="@Model.category.Name" class="form-control" disabled/>
        </div>
        <div class="mb-2">
            <label asp-for="@Model.category.DisplayOrder"></label>
            <input asp-for="@Model.category.DisplayOrder" class="form-control" disabled/>
        </div>
        <button type="submit" class="btn btn-danger mx-2">Delete</button>
        <a class="btn btn-info" asp-page="/CategoryPages/Index">Back to list</a>
    </form>
</div>
